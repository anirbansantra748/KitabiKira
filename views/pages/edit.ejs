<% layout("/layouts/boilerplate") %>

<body>
  <div class="container mt-4">
    <div class="card border-3 rounded shadow-lg p-3 mb-5 bg-white rounded">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img
            src="<%= book.photo %>"
            class="card-img img-fluid rounded"
            alt="Book Photo"
          />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <form
              action="/edit/<%= book._id %>"
              method="POST"
              novalidate
              class="row g-3 needs-validation"
            >
              <div class="row mt-3">
                <div class="col-md-6">
                  <label for="title" class="form-label fw-bold">Title:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    value="<%= book.title %>"
                    required
                  />
                  <div class="valid-feedback">Title looks good.</div>
                  <div class="invalid-feedback">Enter a valid title!</div>
                </div>
                <div class="col-md-6">
                  <label for="author" class="form-label fw-bold">Author:</label>
                  <input
                    type="text"
                    id="author"
                    class="form-control"
                    name="author"
                    value="<%= book.author %>"
                    required
                  />
                  <div class="valid-feedback">Author looks good.</div>
                  <div class="invalid-feedback">Enter a valid author name!</div>
                </div>
              </div>

              <div class="row mt-3">
                <div class="col-md-12">
                  <label for="description" class="form-label fw-bold"
                    >Description:</label
                  >
                  <textarea
                    id="description"
                    class="form-control"
                    name="description"
                    rows="4"
                    required
                  >
                   <%= book.description %></textarea
                  >
                  <div class="valid-feedback">Description looks good.</div>
                  <div class="invalid-feedback">Enter a valid description!</div>
                </div>
              </div>

              <div class="row mt-3">
                <div class="col-md-12">
                  <label for="photo" class="form-label fw-bold"
                    >Book Photo URL:</label
                  >
                  <input
                    type="url"
                    id="photo"
                    class="form-control"
                    name="photo"
                    value="<%= book.photo %>"
                    required
                  />
                  <div class="valid-feedback">Photo URL looks good.</div>
                  <div class="invalid-feedback">Enter a valid photo URL!</div>
                </div>
              </div>

              <div class="row mt-3">
                <div class="col-md-12">
                  <label for="pdf" class="form-label fw-bold">PDF Link:</label>
                  <input
                    type="url"
                    id="pdf"
                    class="form-control"
                    name="pdf"
                    value="<%= book.pdf %>"
                    required
                  />
                  <div class="valid-feedback">PDF link looks good.</div>
                  <div class="invalid-feedback">Enter a valid PDF link!</div>
                </div>
              </div>

              <div class="col-md-12 mt-3">
                <button type="submit" class="btn btn-success col-md-12">
                  Edit Book
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
