<% if (success && success.length > 0) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= success %> &nbsp; <i class="fa-regular fa-circle-check"></i>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (error && error.length > 0) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= error %> &nbsp; <i class="fa-solid fa-triangle-exclamation"></i>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
